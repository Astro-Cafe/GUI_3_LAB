<Window x:Class="GUI_LAB03.TrooperEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_LAB03"
        mc:Ignorable="d"
        Title="TrooperEditor" Height="300" Width="400">
    <StackPanel DataContext="{Binding ElementName=lbox, Path=SelectedItem}">
        <Label Content="Power" Background="LightBlue" Padding="10" />
        <TextBox x:Name="tb_power" Padding="10" />
        <Label Content="Vitality" Background="LightBlue" Padding="10" />
        <TextBox x:Name="tb_vitality" Padding="10" />
        <Label Content="Cost" Background="LightBlue" Padding="10" />
        <TextBox x:Name="tb_cost" Padding="10" />

        <Button Content="Save" Padding="15" Click="Button_click_save" />

    </StackPanel>
</Window>
